<!DOCTYPE html>
<html lang="en">
  
<%- include('partials/head')  %>

<body>
	<!-- Header -->
  <%- include('partials/header')  %> 
	<!-- /Header -->
	
    <div class="container products-wrapper">
        
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title">
                        Detalle del producto:
                        <%= product.name %>
                    </h2>
                </div>
                
                    <div class="product-detail">
                        <div class="row">
                            <div class="col-12 col-lg-8">
                                <figure class="product-detail-img">
                                    <img src="/images/products/<%= product.image %> " alt="" class="img-fluid">
                                </figure>
                                <p class="product-detail-description">
                                    <%= product.description %> 
                                </p>
                            </div>
                            <div class="col-12 col-lg-4">
                                <article class="product-detail-info">
                                <h3 class="product-detail-title">
                                    <%= product.name %> 
                                </h3>
                                <% if (product.discount != 0) { %>
                                    <p class="product-detail-price small"><span >$<%= product.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") %></span> / <b><%- product.discount %>% OFF</b></p>
                                <% } %>
                                <h2 class="product-detail-price">$<%-(product.price - product.price * product.discount / 100).toFixed(0).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".")%>
                                </h2>
                                <ul class="actions-list">
                                    <li>
                                        <i class="fas fa-credit-card"></i>
                                        <p>Pag√° en 12 cuotas sin interes</p>
                                    </li>
                                    <li>
                                        <i class="fas fa-store"></i>
                                        <p>Retiro gratis en locales del vendedor</p>
                                    </li>
                                </ul>
                                <button class="buy-now-button">Comprar ahora</button>
                                </article>
                            </div>
                            
                        </div>
                    </div>
               

            </div>
       
    </div>

	<!-- footer -->
	<%- include('partials/footer')  %> 
	<!-- /footer -->

  <!-- scripts -->
  <%- include('partials/scripts')  %> 
  <!-- /scripts -->
</body>
</html>